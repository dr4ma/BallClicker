<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_app_style">
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/impact</item>
        <item name="android:textSize">@dimen/menu_text_size</item>
        <item name="android:layout_marginBottom">@dimen/margin_text_menu</item>
    </style>

    <style name="btn_menu_style">
        <item name="android:layout_width">@dimen/button_menu_width</item>
        <item name="android:layout_height">@dimen/button_menu_height</item>
        <item name="android:layout_margin">7dp</item>
        <item name="android:background">@drawable/button_style_menu</item>
    </style>

    <style name="back_arrow_style_game">
        <item name="android:layout_width">35dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:layout_marginTop">45dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_gravity">start</item>
    </style>

    <style name="time_game_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">45sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="progress_bar_app_style">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:indeterminateTint">@color/colorPrimary</item>
    </style>
</resources>